# Flexisip SIP (TCP/TLS)
# Note: SIP over TLS uses port 5061 directly, not HTTP
# This is just for websocket support if needed
server {
    listen 80;
    server_name sip.your-domain.com;
    
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name sip.your-domain.com;
    
    ssl_certificate /etc/letsencrypt/live/sip.your-domain.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/sip.your-domain.com/privkey.pem;
    
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    
    # SIP over WebSocket (if needed)
    location / {
        proxy_pass http://localhost:5060;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
    }
}
